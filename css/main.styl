@import 'nib'

/* VARIABLES */
tdur        = 300ms ease
transition  = all tdur
radius      = 6px
mainSpriteLink = '../images/sprite.png'
contentIcons = '../images/content-icons-sprite.png'

/* FUNCTIONS */
font-dinpro()
  font-family "DINPro", "Times New Roman", "Arial" , sans-serif
font-myriad()
  font-family "PT Sans", sans-serif;
clearfix()
  zoom 1
  &:before,
  &:after
    content ""
    display table
  &:after
    clear both

font-proxima()
  font-family 'proxima_nova', sans-serif

bs-cover( type = cover)
  background-size type
  .no-backgroundsize &
    -ms-behavior url(backgroundsize.min.htc)

overflow-ellipsis(blockWidth)
  text-overflow ellipsis
  white-space nowrap
  overflow hidden
  max-width blockWidth

multiline-overflow(lines-to-show)
  display block
  display -webkit-box
  max-height @line-height*lines-to-show
  -webkit-line-clamp lines-to-show
  -webkit-box-orient vertical
  overflow hidden
  text-overflow ellipsis

icon()
  background-image none !important
  position relative
  &:before
  &:after
    content ' '
    absolute left top
    width 100%
    height 100%
    opacity 1
    visibility visible
    transition transition
    .no-opacity &
      display block
  &:after
    background-position 0 bottom
    opacity 0
    visibility hidden
    .no-opacity &
      display none
  &:hover
    &:before
      opacity 0
      visibility hidden
      .no-opacity &
        display none
    &:after
      opacity 1
      visibility visible
      .no-opacity &
        display block

html
  height 100%
.wrapper
  position relative
body
  clearfix()
  padding 75px 0
  font-myriad()
  position relative

  font-weight normal
  margin 0
  -webkit-font-smoothing subpixel-antialiased !important
  backface-visibility hidden
  background-color: #464650
h1,h2,h3,h4,ul,li
  margin 0
  padding 0
  list-style none

a
  text-decoration none
  &:visited
    color #000
  &:focus
    outline none

p
